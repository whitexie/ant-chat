{
  "compilerOptions": {
    "target": "ES2020",
    "rootDir": "src",
    "module": "ESNext",
    "moduleResolution": "node",
    "types": [
      "./globals.d.ts"
    ],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}
